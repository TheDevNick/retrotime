<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <title>Sign Up</title>
</head>
<body>
  <% if (locals.messages.errors) { %>
    <% messages.errors.forEach( el => { %>
        <div class="alert alert-danger"><%= el.msg %></div>
    <% }) %>    
<% } %>
    <form action="/signup" method="post" class="container w-25">
        <h2>Sign Up</h2>
        <div class="mb-3">
          <label for="userEmail" class="form-label">Email address</label>
          <input type="email" name="email" class="form-control" id="userEmail" aria-describedby="emailHelp">
          <div id="emailValidation" class="form-text">email validation message will go here</div>
        </div>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input type="text" name="userName" class="form-control" id="username" aria-describedby="usernameHelp">
          <div id="usernameValidation" class="form-text">username validation message will go here</div>
        </div>
        <div class="mb-3">
            <label for="password class="form-label">Password</label>
            <input type="password" name="password" class="form-control" id="password">
            <div id="passwordValidation" class="form-text"> passwordvalidation message will go here</div>
        </div>
        <div class="mb-3">
            <label for="confirmPassword" class="form-label">Confirm Password</label>
            <input type="password" name="confirmPassword" class="form-control" id="exampleInputPassword1">
            <div id="passwordValidation" class="form-text"> passwordvalidation message will go here</div>
        </div>
        <div class="form-text py-2">
            Already have an account? Login <a href="/login">Here</a>
        </div>
        <button type="submit" class="btn btn-primary w-100">Submit</button>
      </form>
    
    <!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>
</html>